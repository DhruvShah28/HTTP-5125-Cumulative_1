@model Cumulative_1.Models.Course

<div id="containershow">
    <nav>
        <a class="navlink" href="/CoursePage/CShow/@Model.Course_Id">Back</a>
    </nav>
    <h2>Update Course</h2>
    <form method="POST" action="/CoursePage/Update/@Model.Course_Id">
        <div class="inputrow">
            <label for="Course_Code">CourseCode:</label>
            <input type="text" id="Course_Code" name="Course_Code" value="@Model.Course_Code" />

        </div>
        <div class="inputrow">
            <label for="C_Start_Date">Start Date:</label>
            <input type="date" id="C_Start_Date" name="C_Start_Date" value="@Model.C_Start_Date" />

        </div>
        <div class="inputrow">
            <label for="C_End_Date">Finish Date:</label>
            <input type="date" id="C_End_Date" name="C_End_Date" value="@Model.C_End_Date" />
        </div>
        <div class="inputrow">
            <label for="Course_Name">Course Name:</label>
            <input type="text" id="Course_Name" name="Course_Name" value="@Model.Course_Name"  />
        </div>
        <div class="inputrow">
            <label for="Teacher_Id">TeacherId:</label>
            <input type="number" id="Teacher_Id" name="Teacher_Id" value="@Model.Teacher_Id" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Course" />
        </div>
    </form>
</div>