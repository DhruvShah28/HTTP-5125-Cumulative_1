@model Cumulative_1.Models.Teacher

<!-- This web page displays the question if user wants to delete the teacher permanently from the database -->

<div id="container">
    <div class="course">
        <!-- This link directs you back to the page where details of the teacher are displayed -->
        <a class="navlink" href="/TeacherPage/Show/@Model.Teacher_Id">Cancel</a>

    </div>

    <h2>Are you sure you want to delete @Model.First_Name @Model.Last_Name?</h2>
    <p>This action cannot be <span class="imp">undone</span>.</p>

    <!-- This button permanently deletes the teacher from the database, it will not direct you to any webpage -->
    <form method="POST" action="/TeacherPage/Delete/@Model.Teacher_Id">
        <button class="warning-button">
            Confirm Delete
        </button>
    </form>

</div>

<style>
    .container {
        display: flex;
    }

    .course {
        margin-bottom: 20px;
    }

    .addlink {
        font-size: 20px;
    }
    .imp{
        color: red;
        font-size: 1.5em;
    }
</style>